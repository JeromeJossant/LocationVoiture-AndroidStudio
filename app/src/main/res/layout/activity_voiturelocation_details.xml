<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/my_color"
    android:padding="16dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/title_bar_layout">

        <ImageButton
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@color/my_color"
            android:layout_centerVertical="true"
           android:layout_alignParentStart="true"
            android:id="@+id/back_btn"
            android:src="@drawable/ic_baseline_arrow_back_24"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/page_title"
            android:layout_centerInParent="true"
            android:text="Détail"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:textStyle="bold"/>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:layout_marginVertical="10dp"
        android:backgroundTint="@color/teal_700"
        android:layout_below="@id/title_bar_layout"
        android:id="@+id/details_linear_layout"
        android:background="@drawable/rounded_corner"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:text="Marque :"
                android:textColor="@color/white"
                android:id="@+id/marque_details_txt"
                android:textSize="18sp"
                android:layout_marginVertical="4dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="marque"
                android:layout_toRightOf="@+id/marque_details_txt"
                android:id="@+id/marque_details_text_view"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_marginVertical="4dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:text="modèle :"
                android:textColor="@color/white"
                android:id="@+id/model_details_txt"
                android:textSize="18sp"
                android:layout_marginVertical="4dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="modèle"
                android:id="@+id/model_details_text_view"
                android:layout_toRightOf="@+id/model_details_txt"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_marginVertical="4dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView  android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:text="version :"
                android:textColor="@color/white"
                android:id="@+id/version_details_txt"
                android:textSize="18sp"
                android:layout_marginVertical="4dp"/>

            <TextView  android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="version"
                android:id="@+id/version_details_text_view"
                android:textColor="@color/white"
                android:layout_toRightOf="@+id/version_details_txt"
                android:textSize="18sp"
                android:layout_marginVertical="4dp"/>


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="carburant :"
                android:textColor="@color/white"
                android:id="@+id/carburant_details_txt"
                android:textSize="18sp"
                android:layout_marginVertical="4dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="carburant"
                android:id="@+id/carburant_details_text_view"
                android:layout_toRightOf="@+id/carburant_details_txt"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_marginVertical="4dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:text="place :"
                android:textColor="@color/white"
                android:id="@+id/place_details_txt"
                android:textSize="18sp"
                android:layout_marginVertical="4dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="place "
                android:id="@+id/place_details_text_view"
                android:layout_toRightOf="@+id/place_details_txt"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_marginVertical="4dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:text="boite de vitesse :"
                android:textColor="@color/white"
                android:id="@+id/boiteVitesse_details_text_view_details_txt"
                android:textSize="18sp"
                android:layout_marginVertical="4dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="boite de vitesse"
                android:id="@+id/boiteVitesse_details_text_view"
                android:layout_toRightOf="@+id/boiteVitesse_details_text_view_details_txt"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_marginVertical="4dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="prix horaire :"
                android:textColor="@color/white"
                android:id="@+id/prixHoraire_details_txt"
                android:textSize="18sp"
                android:layout_marginVertical="4dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/prixHoraire_details_text_view"
                android:layout_toRightOf="@+id/prixHoraire_details_txt"
                android:text="prix horaire"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_marginVertical="4dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="prix journalier :"
                android:textColor="@color/white"
                android:id="@+id/prixJournalier_details_txt"
                android:textSize="18sp"
                android:layout_marginVertical="4dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/prixJournalier_details_text_view"
                android:text="prix journalier"
                android:layout_toRightOf="@+id/prixJournalier_details_txt"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_marginVertical="4dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:text="ville :"
                android:textColor="@color/white"
                android:id="@+id/ville_details_txt"
                android:textSize="18sp"
                android:layout_marginVertical="4dp"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ville"
                android:id="@+id/ville_details_text_view"
                android:layout_toRightOf="@+id/ville_details_txt"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_marginVertical="4dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="statut :"
                android:textColor="@color/white"
                android:id="@+id/statut_details_txt"
                android:textSize="18sp"
                android:layout_marginVertical="4dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="statut"
                android:id="@+id/statut_details_text_view"
                android:layout_toRightOf="@+id/statut_details_txt"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_marginVertical="4dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Publié le :"
                android:id="@+id/timestamp_details_txt"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_marginVertical="4dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="timestamp"
                android:id="@+id/locationVoiture_timestamp_details_text_view"
                android:layout_toRightOf="@+id/timestamp_details_txt"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_marginVertical="4dp"/>

        </RelativeLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:layout_marginVertical="10dp"
        android:backgroundTint="@color/color_button2"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/details_linear_layout"
        android:background="@drawable/rounded_corner"
        android:id="@+id/reserver_btn"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Réserver"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>

</RelativeLayout>