<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ProfilActivity"
    tools:ignore="ExtraText"
    android:background="@color/my_color">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/title_bar_layout">

        <ImageButton
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@color/my_color"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:id="@+id/back_btn"
            android:src="@drawable/ic_baseline_arrow_back_24"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/title_profil"
            android:layout_centerInParent="true"
            android:text="Profil"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:textStyle="bold"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/nom_layout"
        android:layout_below="@+id/title_bar_layout"
        android:paddingTop="12dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtNom"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="Nom :"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/nom_profil_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/txtNom"
            android:text="Nom"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nom_layout"
        android:id="@+id/prenom_layout"
        android:orientation="horizontal">

        <TextView
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:text="Prénom :"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:id="@+id/txtPrenom"
            android:textSize="20dp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/prenom_profil_text_view"
            android:text="Prénom"
            android:textColor="@color/white"
            android:layout_toRightOf="@+id/txtPrenom"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:textStyle="bold"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/prenom_layout"
        android:id="@+id/email_layout"
        android:orientation="horizontal">

        <TextView
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:text="Email :"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:id="@+id/txtEmail"
            android:textSize="20dp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/email_profil_text_view"
            android:text="Email"
            android:textColor="@color/white"
            android:layout_toRightOf="@+id/txtEmail"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:textStyle="bold"/>

    </RelativeLayout>


    <TextView
        android:id="@+id/txtLocationEnCours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/email_layout"
        android:gravity="center"
        android:paddingTop="20dp"
        android:text="Location en cours :"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="bold" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:layout_marginVertical="10dp"
        android:backgroundTint="@color/teal_700"
        android:id="@+id/location_en_cours_layout"
        android:layout_below="@id/txtLocationEnCours"
        android:background="@drawable/rounded_corner"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:text="Marque :"
                android:textColor="@color/white"
                android:id="@+id/marque"
                android:textSize="18sp"
                android:layout_marginVertical="4dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="marque"
                android:id="@+id/marque_text_view"
                android:layout_toRightOf="@+id/marque"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_marginVertical="4dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:text="Modèle :"
                android:textColor="@color/white"
                android:id="@+id/modele"
                android:textSize="18sp"
                android:layout_marginVertical="4dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="modèle"
                android:id="@+id/model_details_text_view"
                android:layout_toRightOf="@+id/modele"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_marginVertical="4dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView  android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:text="Version :"
                android:textColor="@color/white"
                android:id="@+id/version"
                android:textSize="18sp"
                android:layout_marginVertical="4dp"/>

            <TextView  android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="version"
                android:id="@+id/version_details_text_view"
                android:layout_toRightOf="@+id/version"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_marginVertical="4dp"/>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="Durée :"
                android:textColor="@color/white"
                android:id="@+id/duree"
                android:textSize="18sp"
                android:layout_marginVertical="4dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="durée"
                android:id="@+id/carburant_details_text_view"
                android:layout_toRightOf="@+id/duree"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_marginVertical="4dp"/>

        </RelativeLayout>

    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/back_annonce_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/location_en_cours_layout"
        android:layout_marginVertical="12dp"
        android:layout_marginTop="30dp"
        android:textColor="@color/white"
        app:backgroundTint="@color/color_button"
        android:text="Revenir aux annonces"
        android:textSize="18sp">

    </com.google.android.material.button.MaterialButton>


</RelativeLayout>